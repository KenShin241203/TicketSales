@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
}


<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <section class="signup">
                <div class="container">
                    <div class="signup-content">
                        <div class="signup-form">
                            <h2 class="form-title">Sign up</h2>
                            <form method="POST" class="register-form" id="register-form">
                                <h2>Create a new account.</h2>
                                <hr />
                                <div class="form-group">
                                    <input asp-for="Input.FullName" class="form-control" autocomplete="fullname" aria-required="true" placeholder="fullname" />
                                    <label asp-for="Input.FullName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                    
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email"><i class="zmdi zmdi-account material-icons-name"> </i></label>
                                    
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password"><i class="zmdi zmdi-account material-icons-name"> </i></label>
                                    
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword"><i class="zmdi zmdi-account material-icons-name"> </i></label>
                                    
                                </div>
                                <div class="form-group">
                                    <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                    <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                                </div>
                                <div class="form-group form-button">
                                    <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                                </div>
                            </form>
                        </div>
                        <div class="signup-image">
                            <figure><img src="~/login/images/signup-image.jpg" alt="sing up image"></figure>
                            <a class="signup-image-link" asp-area="Identity" asp-page="/Account/Login">I am already member</a>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
