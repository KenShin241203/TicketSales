@model IEnumerable<Ticket_Sales.Models.Event>
@{
    ViewData["Title"] = "Arts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .site-menu-header {
        background: url('https://salt.tikicdn.com/ts/ds/bb/34/4d/3d40a269fcba21739b081e88caa60837.jpeg');
        position: center;
    }
</style>
<header class="site-header site-menu-header">
    @* <img src="~/layoutuser/images/header/banner.jpg" /> *@
    @* <div class="container">
    <div class="row">

    <div class="col-lg-10 col-12 mx-auto">
